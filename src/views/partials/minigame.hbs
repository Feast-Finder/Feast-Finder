<div class="modal fade" id="startGameModal" tabindex="-1" aria-labelledby="startGameModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="startGameModalLabel">Select a Minigame</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">

        <form id="gameForm">
          <div class="mb-3">
            <label for="gameSelection" class="form-label">Minigames</label>
            <select id="gameSelection" class="form-select" required>
              <option value="">Select a Minigame</option>
              <option value="quickdraw">Quickdraw</option>
            </select>
          </div>
        </form>

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-primary" id="startGameBtn">Play Now</button>
      </div>
    </div>
  </div>
</div>

<div id="gameWaitingOverlay" class="position-fixed top-0 start-0 w-100 h-100 d-flex align-items-center justify-content-center bg-dark bg-opacity-75 text-white fw-bold fs-4 d-none" style="z-index: 1050;">
  Waiting on your friend to accept the game invite...
</div>

<div class="modal fade" id="gameInviteModal" tabindex="-1" aria-labelledby="gameInviteModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="gameInviteModalLabel">Game Invite</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary" id="joinGameBtn">Join Game</button>
      </div>
    </div>
  </div>
</div>

<div class="modal fade" id="quickdrawModal" tabindex="-1" aria-labelledby="quickdrawModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="quickdrawModalLabel">Quickdraw</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <div class="d-grid">
          <button id="quickdrawButton" class="btn btn-primary">Start</button>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary" id="quickdrawDoneBtn">Done</button>
      </div>
    </div>
  </div>
</div>

<script text="text/javascript">
sessionStorage.setItem('userId', {{user.user_id}});
</script>
<script text="text/javascript" src="/js/minigames.js"></script>
