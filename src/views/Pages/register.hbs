{{#> layout name="main" }}

<div class="container pt-4">
  <div class="row justify-content-center">
    <div class="col-lg-6">
      <div class="card shadow rounded-4 p-3">
        <div class="card-body">
          <h2 class="card-title text-center mb-4">Create Account</h2>
          {{> message}}

          <form id="register-form" class="needs-validation" action="/register" method="POST" novalidate>
            <div class="form-floating mb-3">
              <input type="text" class="form-control" id="username" name="username" placeholder="Username" required>
              <label for="username" class="form-label">Username</label>
              <div id="invalidUsername" class="invalid-feedback">
                Please enter a username.
              </div>
            </div>

            <div class="form-floating mb-3">
              <input type="email" class="form-control" id="email" name="email" placeholder="Email">
              <label for="email" class="form-label">Email (optional)</label>
              <div id="invalidEmail" class="invalid-feedback">
                Please enter a valid email address.
              </div>
            </div>

            <div class="form-floating mb-3">
              <input type="tel" class="form-control" id="phone" name="phone" placeholder="Phone Number" pattern="^\(?\d{3}\)?[-.\s]?\d{3}[-.\s]?\d{4}$">
              <label for="phone" class="form-label">Phone Number (optional)</label>
              <div id="invalidPhone" class="invalid-feedback">
                Please enter a valid phone number (e.g. 123-456-7890).
              </div>
            </div>

            <div class="form-floating mb-3">
              <input type="password" class="form-control" id="password" name="password" placeholder="Password" required>
              <label for="password" class="form-label">Password</label>
              <div id="invalidPassword" class="invalid-feedback">
                Please enter a password.
              </div>
            </div>

            <div class="form-floating mb-3">
              <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" placeholder="Confirm Password" required>
              <label for="confirmPassword" class="form-label">Confirm Password</label>
              <div id="invalidConfirmPassword" class="invalid-feedback">
                Please confirm your password.
              </div>
            </div>

            <div class="d-grid gap-2">
              <button type="submit" class="btn btn-primary btn-lg">Register</button>
            </div>
          </form>

          <div class="text-center mt-3">
            <p>Already have an account? <a href="/login">Login.</a></p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script src="/js/validation.js"></script>

{{/layout}}
